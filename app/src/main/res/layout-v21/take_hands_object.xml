<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_initObject"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_id_take"
        android:layout_width="50dp"
        android:text="6"
        android:textSize="30sp"
        android:gravity="center|center_vertical"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_take_name"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="left|center_vertical"
        android:text="@string/assemble"
        android:textColor="@color/FullBlack"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_id_take"
        tools:ignore="RtlHardcoded" />


    <EditText
        android:id="@+id/et_take_hands"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="15dp"
        app:layout_goneMarginRight="10dp"
        android:layout_gravity="right|center_vertical"
        android:layout_weight="1"
        android:hint="Hands"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/b_edit_take" />

    <TextView
        android:id="@+id/tv_take_hands"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="18dp"
        android:textSize="30sp"
        android:text="-1"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/b_edit_take" />

    <ImageButton
        android:id="@+id/b_set_take"
        android:layout_width="40dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:tint="@color/FullWhite"
        android:backgroundTint="@color/GoButton"
        app:srcCompat="@drawable/tick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/b_edit_take"
        android:layout_width="40dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:backgroundTint="@color/cyan"
        app:srcCompat="@drawable/edit"
        android:tint="@color/DarkBlue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VectorDrawableCompat" />



</android.support.constraint.ConstraintLayout>