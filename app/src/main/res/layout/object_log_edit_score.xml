<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_initObject"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_log_es_id"
        android:layout_width="50dp"
        android:text="6"
        android:textSize="30sp"
        android:gravity="center|center_vertical"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_log_es_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="left|center_vertical"
        android:text="@string/assemble"
        android:textColor="@color/FullBlack"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_log_es_id"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_log_es_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="right|center_vertical"
        android:text="30 to 50"
        android:layout_marginRight="10dp"
        android:textColor="@color/FullBlack"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/tv_log_es_id"
        app:layout_constraintTop_toBottomOf="@id/tv_log_es_name"
        tools:ignore="RtlHardcoded" />

</android.support.constraint.ConstraintLayout>