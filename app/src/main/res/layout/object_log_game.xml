<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_initObject"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_log_game_id"
        android:layout_width="50dp"
        android:text="6"
        android:textSize="30sp"
        android:gravity="center_horizontal|top"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_log_game_cards_dealt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="left|center_vertical"
        android:text="Cards Dealt : "
        android:textColor="@color/FullBlack"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_log_game_id"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_log_game_results_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="right|center_vertical"
        android:text="Results:"
        android:layout_marginLeft="20dp"
        android:textColor="@color/FullBlack"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/tv_log_game_id"
        app:layout_constraintTop_toBottomOf="@id/tv_log_game_cards_dealt"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lv_log_show_game_sub_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="10dp"
        android:background="@color/lightCobalt"
        app:layout_constraintStart_toEndOf="@id/tv_log_game_id"
        app:layout_constraintTop_toBottomOf="@id/tv_log_game_results_title" />

</android.support.constraint.ConstraintLayout>