<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_initObject"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_id_init"
        android:layout_width="50dp"
        android:text="6"
        android:textSize="30sp"
        android:gravity="center|center_vertical"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_init_name"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/assemble"
        android:textColor="@color/FullBlack"
        android:textSize="30sp"
        tools:ignore="RtlHardcoded" />

    <ImageButton
        android:id="@+id/b_delete_init"
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        app:srcCompat="@drawable/delete"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/b_edit_init"
        android:layout_width="0dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:tint="@color/FullBlack"
        app:srcCompat="@drawable/edit"
        tools:ignore="VectorDrawableCompat" />


</LinearLayout>