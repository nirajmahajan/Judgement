<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_initObject"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_log_game_sub_id"
        android:layout_width="50dp"
        android:text="6"
        android:textSize="20sp"
        android:gravity="center|center_vertical"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_log_game_sub_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="left|center_vertical"
        android:text="Name"
        android:textColor="@color/FullBlack"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_log_game_sub_id"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:id="@+id/ll_log_game_sub_player_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_log_game_sub_id"
        app:layout_constraintTop_toBottomOf="@id/tv_log_game_sub_name"        >

        <TextView
            android:id="@+id/tv_log_game_sub_predicted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="right|center_vertical"
            android:text="Predicted: "
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textColor="@color/FullBlack"
            android:textSize="15sp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_log_game_sub_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="right|center_vertical"
            android:text="Resu"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textColor="@color/FullBlack"
            android:textSize="15sp"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>