<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_ep_initObject"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_move_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/b_ep_up"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/cobalt"
            android:src="@drawable/up"/>
        <ImageButton
            android:id="@+id/b_ep_down"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:background="@color/cobalt"
            android:src="@drawable/down"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ep_id_init"
        android:layout_width="50dp"
        android:text="6"
        android:textSize="30sp"
        android:gravity="center|center_vertical"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_ep_init_name"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:text="@string/assemble"
        android:textColor="@color/FullBlack"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="25sp"
        tools:ignore="RtlHardcoded" />

    <ImageButton
        android:id="@+id/b_ep_delete_init"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@color/cyan"
        android:layout_weight="1"
        app:srcCompat="@drawable/delete"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/b_ep_edit_init"
        android:layout_width="0dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/cyan"
        android:tint="@color/FullBlack"
        app:srcCompat="@drawable/edit"
        tools:ignore="VectorDrawableCompat" />


</LinearLayout>