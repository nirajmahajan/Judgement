<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_initObject"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_take_res_name"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="left|center_vertical"
        android:text="@string/assemble"
        android:textColor="@color/FullBlack"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_prediction_take_res"
        android:layout_width="50dp"
        android:text="6"
        android:textSize="30sp"
        android:layout_marginRight="10dp"
        android:gravity="center|center_vertical"
        android:layout_height="match_parent"
        android:textColor="@color/FullBlack"
        android:background="@color/cobalt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rg_take_res_result"/>


    <RadioGroup
        android:id="@+id/rg_take_res_result"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/radio_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textColor="@color/FullBlack"
            android:buttonTint="@color/Win"
            android:textSize="25sp"
            android:text="Yes"/>
        <RadioButton
            android:id="@+id/radio_no"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:textColor="@color/FullBlack"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/holo_red_dark"
            android:gravity="center_vertical|left"
            android:text="No"/>
    </RadioGroup>


</android.support.constraint.ConstraintLayout>