<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="android.example.judgement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Game.TakeResults.TakeResults" android:screenOrientation="portrait"/>
        <activity android:name=".Game.TakeHands.TakeHands"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan"/>
        <activity android:name=".Game.PlayGame" android:screenOrientation="portrait"/>
        <activity android:name=".Game.ShowFinalScore.DisplayFinalScore" android:screenOrientation="portrait"/>
        <activity android:name=".Game.template.DealerEdit" android:screenOrientation="portrait"/>
        <activity android:name=".Game.template.ScoreboardEdit.ScoreBoardEdit" android:screenOrientation="portrait"/>
        <activity android:name=".Game.template.ScoreboardDisplay.ScoreboardDisplay" android:screenOrientation="portrait"/>
        <activity android:name=".Game.template.editPlayer.game_edit_player" android:screenOrientation="portrait"/>
        <activity
            android:name=".Game.template.GameTemplate"
            android:label="@string/title_activity_game_template"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity android:name=".Initialise.About" android:screenOrientation="portrait"/>
        <activity android:name=".Initialise.Init_Dealer" android:screenOrientation="portrait"/>
        <activity android:name=".Initialise.TemplateActivity" android:screenOrientation="portrait"/>
        <activity
            android:name=".Initialise.Init_Players"
            android:label="@string/title_activity_init__players"
            android:parentActivityName=".Initialise.MainActivity"
            tools:targetApi="jelly_bean"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.example.judgement.Initialise.MainActivity" />
        </activity>
        <activity android:name=".Initialise.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>